<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <!-- map dashboard: visible by default -->
    <com.google.android.maps.MapView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/mapview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:apiKey="0-VpvGDqGmzDKJRHbDB6TPvtRPJ5A8GNWBccH7A"
        android:clickable="true" />

    <Button
        android:id="@+id/date_settings"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_alignLeft="@id/mapview"
        android:layout_alignTop="@id/mapview" />

    <Button
        android:id="@+id/settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/mapview"
        android:layout_alignTop="@id/mapview"
        android:text="@string/settings" />

    <Button
        android:id="@+id/previous_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/mapview"
        android:layout_alignLeft="@id/mapview"
        android:text="@string/previous_day" />

    <Button
        android:id="@+id/next_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/mapview"
        android:layout_alignRight="@id/mapview"
        android:text="@string/next_day" />

    <!-- calendar dashboard: invisible by default -->
    <CalendarView
        android:id="@+id/calendar"
        android:focusedMonthDateColor="#fffcca"
        android:unfocusedMonthDateColor="#0066cc"
        android:weekDayTextAppearance="@android:style/TextAppearance.Small"
        android:showWeekNumber="false"
        android:visibility="gone"
        android:layout_above="@id/next_day"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

    <Button
        android:id="@+id/unbounded_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:text="@string/unbounded_date" />

    <Button
        android:id="@+id/draw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/mapview"
        android:layout_alignTop="@id/mapview"
        android:text="@string/draw"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/mapview"
        android:layout_alignLeft="@id/mapview"
        android:weightSum="1.0" >

        <ToggleButton
            android:id="@+id/first_day"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".3"
            android:visibility="gone"
            android:textOff="@string/first_day"
            android:textOn="@string/first_day" />

        <ToggleButton
            android:id="@+id/draw_markers"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".4"
            android:textOff="@string/draw_markers"
            android:textOn="@string/no_markers"
            android:visibility="gone" />

        <ToggleButton
            android:id="@+id/last_day"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".3"
            android:visibility="gone"
            android:textOff="@string/last_day"
            android:textOn="@string/last_day" />

    </LinearLayout>

</RelativeLayout>
